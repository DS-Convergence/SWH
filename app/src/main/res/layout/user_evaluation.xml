<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="30dp"
        android:background="@color/lace_white"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/goyang"
            android:gravity="center"
            android:text="대여과정이 만족스러우셨나요?"
            android:textColor="@color/mocha_brown"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/goyang"
            android:gravity="center"
            android:text="이 평가는 상대방의 평점에 반영됩니다."
            android:textColor="@color/mocha_brown"
            android:textSize="18sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingHorizontal="50dp">

            <ImageView
                android:id="@+id/img_acorn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                tools:srcCompat="@drawable/acorn" />

            <ImageView
                android:id="@+id/img_acorn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                tools:srcCompat="@drawable/acorn" />

            <ImageView
                android:id="@+id/img_acorn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                tools:srcCompat="@drawable/acorn" />

            <ImageView
                android:id="@+id/img_acorn4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                tools:srcCompat="@drawable/acorn_empty" />

            <ImageView
                android:id="@+id/img_acorn5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@drawable/acorn_empty" />
        </TableRow>

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="[닫기]"
            android:textColor="@color/mocha_brown" />

    </LinearLayout>
</RelativeLayout>