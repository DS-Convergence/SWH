<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rice_white"
    tools:context=".UserInfoActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/oat_yellow">

        <TextView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/goyang"
            android:textColor="@color/mocha_brown"
            android:text="&lt;" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/goyang"
            android:paddingLeft="60dp"
            android:paddingTop="13dp"
            android:paddingBottom="15dp"
            android:textSize="30sp"
            android:textColor="@color/mocha_brown"
            android:text="유저 프로필"/>


    </FrameLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/blank_profile_picture" />


    <TextView
        android:id="@+id/id_sign_up_txt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:padding="10dp"
        android:fontFamily="@font/goyang"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/mocha_brown"
        android:text="닉네임"/>
    <TextView
        android:id="@+id/nick_sign_up_txt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:padding="10dp"
        android:fontFamily="@font/goyang"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/mocha_brown"
        android:text="위치"/>
    <!--받아올때 두개를 한번에 받아오기?-->
    <TextView
        android:id="@+id/rating_txt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:padding="10dp"
        android:fontFamily="@font/goyang"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/mocha_brown"
        android:text="평점"/>
    <!-- 받아 올때 예시 형식 대로 받아오기-->
    <TextView
        android:id="@+id/user_writing_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:padding="10dp"
        android:fontFamily="@font/goyang"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:background="@color/oat_yellow"
        android:textColor="@color/mocha_brown"
        android:text="  OOO 님의 게시글"/>
    <ScrollView
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="1000dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="380dp"
            android:id="@+id/user_listview" />
    </ScrollView>

    <ImageView
        android:id="@+id/report_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/siren" />


</FrameLayout>