<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!--라운드버튼: 기본버튼 -> cornerradius=100dp, backgroundTint 설정-->

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rice_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/oat_yellow"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/gotomore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left|center_vertical"
                android:background="@color/oat_yellow"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/more" />

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/oat_yellow"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/logo" />

            <ImageButton
                android:id="@+id/gotochat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|center_vertical"
                android:background="@color/oat_yellow"
                android:foregroundTint="@color/mocha_brown"
                android:scaleType="fitCenter"
                android:tint="@color/mocha_brown"
                app:srcCompat="@drawable/chat" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <SearchView
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="20dp"
                android:background="@color/grey" />

            <ImageButton
                android:id="@+id/gotomap"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|right"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/rice_white"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/around_loc" />

        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/goyang"
                        android:text="최근 업데이트"
                        android:textColor="@color/mocha_brown"
                        android:textSize="25sp"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <TextView
                        android:id="@+id/moreUpdate"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:fontFamily="@font/goyang"
                        android:gravity="right"
                        android:text="더보기"
                        android:textColor="@color/mocha_brown"
                        android:textSize="15sp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/updateView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/cateTextView"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/goyang"
                        android:text="카테고리"
                        android:textColor="@color/mocha_brown"
                        android:textSize="25sp"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <TextView
                        android:id="@+id/moreCate"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:fontFamily="@font/goyang"
                        android:gravity="right"
                        android:text="더보기"
                        android:textColor="@color/mocha_brown"
                        android:textSize="15sp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cateView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/goyang"
                        android:text="추천"
                        android:textColor="@color/mocha_brown"
                        android:textSize="25sp"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <TextView
                        android:id="@+id/moreRcmd"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:fontFamily="@font/goyang"
                        android:gravity="right"
                        android:text="더보기"
                        android:textColor="@color/mocha_brown"
                        android:textSize="15sp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcmdView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/writeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/peanut_brown"
            android:fontFamily="@font/goyang"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:text="글쓰기"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:cornerRadius="100dp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>