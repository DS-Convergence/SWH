<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/imageImage_to_row"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginStart="3dp"
        android:background="@drawable/colorback3round"
        android:maxWidth="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageview_chat_to_row"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.521" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_chat_to_row"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:civ_border_color="#BC9F83"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        app:srcCompat="@drawable/rounded_button" />

    <TextView
        android:id="@+id/chat_to_row_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jsdongkang_regular"
        android:text="시간"
        android:layout_marginBottom="10dp"
        android:textColor="#5A3E29"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageImage_to_row"
        app:layout_constraintStart_toEndOf="@+id/imageImage_to_row" />
</androidx.constraintlayout.widget.ConstraintLayout>