<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rice_white"
    tools:context=".MyPageActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/oat_yellow">

        <TextView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/goyang"
            android:textColor="@color/mocha_brown"
            android:text="&lt;" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/goyang"
            android:paddingLeft="60dp"
            android:paddingTop="13dp"
            android:paddingBottom="15dp"
            android:textSize="30sp"
            android:textColor="@color/mocha_brown"
            android:text="마이페이지"/>


    </FrameLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_propic_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/blank_profile_picture" />


    <TextView
        android:id="@+id/id_sign_up_txt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:padding="10dp"
        android:fontFamily="@font/goyang"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/mocha_brown"
        android:text="닉네임"/>
    <TextView
        android:id="@+id/introduce_txt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:padding="10dp"
        android:fontFamily="@font/goyang"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/mocha_brown"
        android:text="한 줄 소개"/>
    <!--받아올때 두개를 한번에 받아오기?-->
    <TextView
        android:id="@+id/rating_txt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:padding="10dp"
        android:fontFamily="@font/goyang"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/mocha_brown"
        android:text="평점"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="398dp"
        android:background="@color/cinnamon_brown" />
    <!-- 받아 올때 예시 형식 대로 받아오기-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:paddingTop="5dp"
        android:background="@color/lace_white">

        <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/my_list_btn"
            android:backgroundTint="@color/peanut_brown"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/goyang"
            android:textSize="20sp"
            android:text="나의\n게시글"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/transaction_list_btn"
            android:backgroundTint="@color/peanut_brown"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/goyang"
            android:textSize="20sp"
            android:text="거래\n내역"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/peanut_brown"
            android:id="@+id/my_fav_list_btn"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/goyang"
            android:textSize="20sp"
            android:text="찜목록"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/cinnamon_brown"
            android:layout_marginTop="85dp"/>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="85dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="   회원정보 설정"
                    android:id="@+id/user_setting_btn"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/goyang"
                    android:textColor="@color/mocha_brown"
                    android:textSize="20sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/cinnamon_brown" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="   위치정보 설정"
                    android:id="@+id/set_location_btn"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/goyang"
                    android:textColor="@color/mocha_brown"
                    android:textSize="20sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/cinnamon_brown" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="   로그아웃"
                    android:id="@+id/logout_btn"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/goyang"
                    android:textColor="@color/mocha_brown"
                    android:textSize="20sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/cinnamon_brown" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="   회원탈퇴"
                    android:id="@+id/withdrawal_btn"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/goyang"
                    android:textColor="@color/mocha_brown"
                    android:textSize="20sp"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <!-- 이용약관 -->
    <ImageView
        android:id="@+id/terms_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/info" />




</FrameLayout>