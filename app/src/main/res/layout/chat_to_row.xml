<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/textView_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/colorback1round"
        android:fontFamily="@font/jsdongkang_regular"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text="This is my Message"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_chat_to_row"
        app:layout_constraintEnd_toStartOf="@+id/imageview_chat_to_row"
        app:layout_constraintTop_toTopOf="@+id/imageview_chat_to_row"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintVertical_bias="0.0"  />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_chat_to_row"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        app:civ_border_color="#BC9F83"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rounded_button" />

    <TextView
        android:id="@+id/chat_to_row_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jsdongkang_regular"
        android:text="시간"
        android:textColor="#5A3E29"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_to_row"
        app:layout_constraintEnd_toStartOf="@+id/textView_to_row" />
</androidx.constraintlayout.widget.ConstraintLayout>